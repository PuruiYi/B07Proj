<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailPendingEvent">

    <EditText
        android:id="@+id/detailVenue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="248dp"
        android:minHeight="48dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <EditText
        android:id="@+id/detailName"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/detailCapacity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/detailVenue"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <EditText
        android:id="@+id/detailCapacity"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/detailStartTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/detailName"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <EditText
        android:id="@+id/detailStartTime"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/detailEndTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/detailCapacity"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <EditText
        android:id="@+id/detailEndTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="100dp"
        android:minHeight="48dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/detailAccept"
        android:layout_width="206dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:text="Accept this event"
        app:layout_constraintEnd_toEndOf="@+id/detailVenue"
        app:layout_constraintStart_toStartOf="@+id/detailVenue"
        app:layout_constraintTop_toBottomOf="@+id/detailVenue" />

    <Button
        android:id="@+id/detailModify"
        android:layout_width="206dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:text="Modify this event"
        app:layout_constraintEnd_toEndOf="@+id/detailVenue"
        app:layout_constraintStart_toStartOf="@+id/detailVenue"
        app:layout_constraintTop_toBottomOf="@+id/detailAccept" />

</androidx.constraintlayout.widget.ConstraintLayout>